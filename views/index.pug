extends layout

block content
  h1= title
  p Welcome to #{title}
  div
    if user
      div
        a(href="/logout") #{user.username} をログアウト
      div
        a(href="/memos/new") 安値をメモする
      - var hasMemo = memos.length > 0
      if hasMemo
        h3 安値のメモ一覧
        table.table
          tr
            th 商品名
            th 更新日時
          each memo in memos
            tr
              td
                a(href=`/memos/${memo.memoId}`) #{memo.productName}
              td #{memo.updatedAt}
    else
      div
        a(href="/login") ログイン
